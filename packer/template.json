{
  "builders": [
    {
      "ami_name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-{{ timestamp }}",
      "instance_type": "{{ user `instance_type` }}",
      "region": "{{ user `region` }}",
      "source_ami": "{{ user `source_ami` }}",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true,
        "owners": [
          "self",
          "aws-marketplace",
          "099720109477"
        ]
      },
      "ssh_username": "ubuntu",
      "type": "amazon-ebs"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "sudo add-apt-repository -y ppa:ansible/ansible",
        "sudo apt-get -qq update",
        "sudo apt-get -qq install ansible"
      ],
      "type": "shell"
    },
    {
      "playbook_dir": "{{ template_dir }}/../roles",
      "playbook_file": "{{ template_dir }}/../test/integration/default/default.yml",
      "type": "ansible-local"
    },
    {
      "inspec_env_vars": [
        "CHEF_LICENSE=accept-silent"
      ],
      "profile": "{{ template_dir }}/../test/integration/default",
      "type": "inspec"
    }
  ],
  "variables": {
    "instance_type": "t3.micro",
    "region": "us-east-1",
    "source_ami": ""
  }
}
